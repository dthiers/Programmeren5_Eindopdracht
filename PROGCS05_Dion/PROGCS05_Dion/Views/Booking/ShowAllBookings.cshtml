@model IEnumerable<DomainModel.Booking>

@{
    ViewBag.Title = "ShowAllBookings";
}

<h2>ShowAllBookings</h2>

<p>
    @Html.ActionLink("Add new booking", "CreateBooking")
</p>
<p>
    @Html.ActionLink("Home", "Index", "Hotel")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EindDatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capaciteit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prijs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EindDatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankrekeningNummer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capaciteit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prijs)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBooking", new { id=item.Id }) |
            @Html.ActionLink("Details", "DetailsBooking", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteBooking", new { id=item.Id })
        </td>
    </tr>
}

</table>
